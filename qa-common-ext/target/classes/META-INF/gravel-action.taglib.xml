<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib version="2.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee web-facelettaglibrary_2_0.xsd ">
	<namespace>http://gravel.jboss.org/jsf/2.0/action</namespace>
	<tag>
		<tag-name>parameter</tag-name>
		<handler-class>org.jboss.gravel.action.handler.ParameterHandler</handler-class>
		<attribute>
			<name>converter</name>
		</attribute>
		<attribute>
			<name>converterMessage</name>
		</attribute>
		<attribute>
			<name>name</name>
			<required>true</required>
		</attribute>
		<attribute>
			<name>target</name>
			<required>true</required>
		</attribute>
		<attribute>
			<name>validatorMessage</name>
		</attribute>
		<attribute>
			<name>required</name>
		</attribute>
		<attribute>
			<name>requiredMessage</name>
		</attribute>
		<attribute>
			<name>default</name>
		</attribute>
	</tag>
	<tag>
		<tag-name>message</tag-name>
		<handler-class>org.jboss.gravel.action.handler.MessageHandler</handler-class>
		<attribute>
			<name>clientId</name>
		</attribute>
		<attribute>
			<name>target</name>
			<required>true</required>
		</attribute>
		<attribute>
			<name>severity</name>
		</attribute>
	</tag>
	<tag>
		<tag-name>attribute</tag-name>
		<handler-class>org.jboss.gravel.action.handler.AttributeHandler</handler-class>
		<attribute>
			<name>name</name>
			<required>true</required>
		</attribute>
		<attribute>
			<name>value</name>
			<required>true</required>
		</attribute>
		<attribute>
			<name>type</name>
		</attribute>
	</tag>
	<tag>
		<tag-name>logOut</tag-name>
		<handler-class>org.jboss.gravel.action.handler.LogOutHandler</handler-class>
		<attribute>
			<name>url</name>
			<required>true</required>
		</attribute>
	</tag>
	<tag>
		<tag-name>checkRole</tag-name>
		<handler-class>org.jboss.gravel.action.handler.CheckRoleHandler</handler-class>
		<attribute>
			<name>roles</name>
			<required>true</required>
		</attribute>
		<attribute>
			<name>message</name>
		</attribute>
		<attribute>
			<name>severity</name>
		</attribute>
		<attribute>
			<name>authorized</name>
		</attribute>
	</tag>
	<tag>
		<tag-name>keepAlive</tag-name>
		<handler-class>org.jboss.gravel.action.handler.KeepAliveHandler</handler-class>
		<attribute>
			<name>value</name>
			<required>true</required>
		</attribute>
	</tag>
	<tag>
		<tag-name>updateKeepAlive</tag-name>
		<handler-class>org.jboss.gravel.action.handler.UpdateKeepAliveHandler</handler-class>
		<attribute>
			<name>var</name>
			<required>true</required>
		</attribute>
	</tag>
	<tag>
		<tag-name>responseActions</tag-name>
		<component>
			<component-type>gravel.action.ResponseActions</component-type>
			<handler-class>org.jboss.gravel.action.handler.ResponseActionsHandler</handler-class>
		</component>
	</tag>
	<tag>
		<tag-name>getOutcome</tag-name>
		<handler-class>org.jboss.gravel.action.handler.GetOutcomeTagHandler</handler-class>
		<attribute>
			<name>outcome</name>
			<required>true</required>
		</attribute>
	</tag>
</facelet-taglib>