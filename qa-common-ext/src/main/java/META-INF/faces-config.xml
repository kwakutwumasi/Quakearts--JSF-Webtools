<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xml="http://www.w3.org/XML/1998/namespace" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd ">

	<converter>
		<converter-id>gravel.RangeListFilter</converter-id>
		<converter-class>org.jboss.gravel.data.converter.RangeListFilterConverter</converter-class>
	</converter>

	<converter>
		<converter-id>gravel.StringWildcardFilter</converter-id>
		<converter-class>org.jboss.gravel.data.converter.StringWildcardFilterConverter</converter-class>
	</converter>

	<converter>
		<converter-id>gravel.BreakingEscape</converter-id>
		<converter-class>org.jboss.gravel.data.converter.BreakingEscapeConverter</converter-class>
	</converter>
	
	<lifecycle>
		<phase-listener>org.jboss.gravel.navigation.phase.NavigationPhaseListener</phase-listener>
		<phase-listener>org.jboss.gravel.common.phase.GravelPhaseListener</phase-listener>
	</lifecycle>
	
	<component>
		<component-type>gravel.action.ResponseActions</component-type>
		<component-class>org.jboss.gravel.action.ui.UIResponseActions</component-class>
	</component>
	<component>
		<component-type>gravel.Entry</component-type>
		<component-class>org.jboss.gravel.common.ui.UICollectionEntry</component-class>
	</component>
	<component>
		<component-type>gravel.compat.DataTable</component-type>
		<component-class>org.jboss.gravel.compat.ui.UIDataTable</component-class>
	</component>
	<component>
		<component-type>gravel.compat.DataTableColumn</component-type>
		<component-class>org.jboss.gravel.compat.ui.UIDataTableColumn</component-class>
	</component>
	<component>
		<component-type>gravel.Repeat</component-type>
		<component-class>org.jboss.gravel.data.ui.UIRepeat</component-class>
	</component>
	<component>
		<component-type>gravel.Properties</component-type>
		<component-class>org.jboss.gravel.data.ui.UIProperties</component-class>
	</component>
</faces-config>