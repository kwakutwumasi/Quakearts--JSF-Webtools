<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd ">
	<servlet>
		<servlet-name>TestAuthenticationNotRequiredServlet</servlet-name>
		<servlet-class>test.TestAuthenticationNotRequiredServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TestAuthenticationNotRequiredServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>AuthenticationFilter</filter-name>
		<filter-class>com.quakearts.webapp.security.rest.filter.AuthenticationFilter</filter-class>
		<init-param>
			<param-name>requireAuthorization</param-name>
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>contextName</param-name>
			<param-value>Test-Authentication-Filter</param-value>
		</init-param>
		<init-param>
			<param-name>errorWriterClass</param-name>
			<param-value>test.TestAuthenticationErrorWriter</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<servlet-name>TestAuthenticationNotRequiredServlet</servlet-name>
	</filter-mapping>
</web-app>
